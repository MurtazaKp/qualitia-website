{
  "collectionName": "components_home_compare_cards",
  "info": {
    "displayName": "Compare Card",
    "icon": "balance-scale-right",
    "description": ""
  },
  "options": {},
  "attributes": {
    "heading": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "href": {
      "type": "string"
    },
    "target": {
      "type": "enumeration",
      "enum": [
        "_self",
        "_blank"
      ]
    },
    "linkText": {
      "type": "richtext",
      "required": false
    },
    "backgroundColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    }
  }
}
