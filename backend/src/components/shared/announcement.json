{
  "collectionName": "components_shared_announcements",
  "info": {
    "displayName": "Announcement",
    "icon": "microphone-alt",
    "description": ""
  },
  "options": {},
  "attributes": {
    "message": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "required": true,
      "customField": "plugin::color-picker.color"
    },
    "linkLabel": {
      "type": "string"
    },
    "linkHref": {
      "type": "string"
    },
    "linkTarget": {
      "type": "enumeration",
      "enum": [
        "_blank",
        "_self"
      ]
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "Link Before",
        "Link After"
      ],
      "required": false,
      "default": "Link Before"
    }
  }
}
