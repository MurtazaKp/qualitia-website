{
  "collectionName": "components_shared_subscribes",
  "info": {
    "displayName": "Subscribe",
    "icon": "mail-bulk",
    "description": ""
  },
  "options": {},
  "attributes": {
    "buttonName": {
      "type": "string",
      "required": true
    },
    "placeholder": {
      "type": "string",
      "required": true,
      "default": "Enter email id"
    },
    "heading": {
      "type": "richtext",
      "required": true
    },
    "trackingId": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "showResourcesDetails": {
      "type": "boolean",
      "default": false
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "Block",
        "Inline"
      ]
    },
    "verticalSpacing": {
      "type": "enumeration",
      "enum": [
        "Vertical Spacing 0%",
        "Vertical Spacing 1%",
        "Vertical Spacing 2%",
        "Vertical Spacing 3%",
        "Vertical Spacing 4%",
        "Vertical Spacing 5%",
        "Vertical Spacing 6%",
        "Vertical Spacing 7%",
        "Vertical Spacing 8%",
        "Vertical Spacing 9%",
        "Vertical Spacing 10%"
      ],
      "default": "Vertical Spacing 1%"
    },
    "subscribeSuccessMessage": {
      "type": "string",
      "required": true,
      "default": "Thank you for subscribing."
    }
  }
}
